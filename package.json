{
  "name": "ben-api",
  "version": "1.0.0",
  "description": "Open Source API",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "install-client": "cd client && npm i",
    "install-server": "npm i",
    "client-dev": "npm start --prefix client",
    "server-dev": "nodemon server.js",
    "full-dev": "concurrently \"npm run server-dev\" \"npm run client-dev\"",
    "build-prod": "(cd client && npm run build) && (cd .. && node cp.build.js)",
    "install-winser": "winser -i -s -c",
    "uninstall-winser": "winser -r -x -s"
  },
  "author": "Paiboon Sirawit",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "mongodb": "^3.3.0",
    "serve-favicon": "^2.5.0"
  },
  "devDependencies": {
    "concurrently": "^4.1.2",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.1",
    "shelljs": "^0.8.3",
    "winser": "^1.0.3"
  }
}
